<Window x:Class="Currency.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Currency"
        mc:Ignorable="d"
        Title="MainWindow" Height="765" Width="1268"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="90"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>
    <Border
        CornerRadius="80"
        BorderThickness="8"
        BorderBrush="Black"
        Background="#F5F3FB">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="335"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border
                CornerRadius="40"
                Width="95"
                Background="#1D212C"
                Margin="28 25 28 25">
                <StackPanel
                    Orientation="Vertical">
                    <Image Source="/resources/diamond.png"
                           Width="32"
                           Margin="0 55"/>
                    <Button
                        Style="{StaticResource MenuButtonStyle}">
                        <Image
                            Source="/resources/collage.png"
                            Width="22"
                            />
                    </Button>
                    <Button
                            Style="{StaticResource MenuButtonStyle}">
                        <StackPanel>
                            <Image
                                Source="/resources/convert.png"
                                Width="22"/>
                            <Ellipse Width="5"
                                     Height="5"
                                     Fill="White"
                                     Margin="3"/>
                        </StackPanel>
                    </Button>
                    <Button
                            Style="{StaticResource MenuButtonStyle}">
                        <Image
                            Source="/resources/prop.png"
                            Width="22"
                            />
                    </Button>
                    <Button
                            Style="{StaticResource MenuButtonStyle}">
                        <Image
                            Source="/resources/notif.png"
                            Width="22"
                            />
                    </Button>
                    <Button
                            Style="{StaticResource MenuButtonStyle}">
                        <Image
                            Source="/resources/profile.png"
                            Width="22"
                            />
                    </Button>
                </StackPanel>
            </Border>

            <StackPanel
                Orientation="Vertical"
                Grid.Column="1"
                Margin="27 78 52 0">
                <TextBlock
                    x:Name="tbWallet"
                    TextWrapping="Wrap"
                    Text="Wallet"
                    FontSize="26"
                    FontFamily="Leelawadee UI"/>
