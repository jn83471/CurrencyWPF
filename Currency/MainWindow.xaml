                        RadiusY="17"
                        MaxHeight="40"
                        Grid.RowSpan="2"
                        Margin="1 5 0 2.5"
                        Fill="White"/>
                    <Image 
                        Source="/resources/bitcoin.png"
                        Width="25"
                        Margin="8 12 7 10"
                        Grid.RowSpan="2"
                        RenderTransformOrigin="0.5 0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="16.712"/>
