            </StackPanel>
            <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Margin="32 72 0 0"
                    TextWrapping="Wrap"
                    Text="1st step"
                    VerticalAlignment="Top"
                    Foreground="#92969F"
                    FontSize="11"/>
            <TextBlock
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Margin="32 85 0 0"
                    TextWrapping="Wrap"
                    Text="Select"
                    Foreground="#1D212C"
                    VerticalAlignment="Top"
                    FontSize="18"/>
            <Separator
                Grid.Column="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="15"
                Margin="107 82 0 0"
                Width="75"
