                    HorizontalAlignment="Left"
                    Margin="555 85 0 0"
                    TextWrapping="Wrap"
                    Text="Success"
                    Foreground="#92969F"
                    VerticalAlignment="Top"
                    FontSize="18"/>

            <Rectangle
                Grid.Column="2"
                Fill="White"
                HorizontalAlignment="Left"
                Height="496"
                Margin="0 173 0 0"
                VerticalAlignment="Top"
                Width="664"/>
            <TextBlock
                Grid.Column="2"
                HorizontalAlignment="Left"
                Margin="57 272 0 0"
                Text="Bitcoin"
                VerticalAlignment="Top"
                Foreground="#DD1F212C"
                FontSize="18"/>

        </Grid>
    </Border>
